                        <div class="divider bg-light"></div>
                        <div class="inbox">
                            <div class="header mt-3">
                                <img src="../images/profile.png">
                                <div class="senderName">Contact 1</div>   
                            </div>

                            <div class="messagesBox bg-light text-dark mt-2 mb-4">
                                <div class="message myMessage bg-success text-light">Hello <span class="time text-danger">12:00</span></div><br><br>    
                                <div class="message notMyMessage bg-secondary text-light">Hi <span class="time text-danger">12:00</span></div><br><br>
